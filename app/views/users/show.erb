<%if flash(:message)%>
  <%=flash[:message]%>
<%end%> 
<h1>Hi, <%=@user.name%>!</h1>

<h2>Trips &hearts;</h2><br>

<%if @trips.length >= 1%>
    <%@trips.each do |trip|%>
        <a class="btn btn-dark"  href="/trips/<%=trip.id%>"role="button"><%=trip.destination%></a> 
    <%end%>
<%elsif @trips.length == 1 %>
    <%trip = @trips[0]%>
    <a class="btn btn-dark"  href="/trips/<%=trip.id%>"role="button"><%=trip.destination%></a>
<%else%>
    <p>You don't have any trips yet!</p>
<%end%><br><br>
<hr>
<br><br><br>
<a class="btn btn-dark"  href="/trips/new"role="button">Create a New Trip</a> <a class="btn btn-dark" href="/logout" role="button">Log Out</a>
