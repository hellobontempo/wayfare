
<%if flash(:message)%>
  <p style="color:coral;"><%=flash[:message]%></p>
<%end%> 

<a class="btn btn-dark"  href="/trips" role="button">Trip Index</a> <a class="btn btn-dark"  href="/resorts" role="button">Resort Index</a> <a class="btn btn-dark" href="/logout" role="button">Log Out</a> 
<hr>
<h1>Hi, <%=@user.name%>!</h1>
